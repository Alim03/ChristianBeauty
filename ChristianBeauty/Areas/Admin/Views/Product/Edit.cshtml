                                            {
                                                <div class="col-6">
                                                    <img src="/Images/ProductImages/@image.ImageName" width="50%" height="50%" alt="Gallery Image" class="img-thumbnail" onclick="changeImage(this)" />
                                                    <input type="file" style="display:none;" name="gallery" onchange="updateImage(this)" />
                                                </div>
                                            }
                                        }
                                    </div>




                            </div>
                            <div class="row">
                                <div class="col-12 form-group ">
                                    <button type="submit" class="btn btn-primary">ثبت</button>
                                </div>
                            </div>
