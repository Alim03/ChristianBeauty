@model ChristianBeauty.ViewModels.Products.ProductDetailViewModel
@{
    ViewData["Title"] = "جزئیات محصول";
}
<style>
    .nav-tabs {
        display: flex !important;
        justify-content: center!important;
    }
</style>

<div class="rn-breadcrumb-inner ptb--30">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h5 class="title text-center text-md-end">جزئیات محصول</h5>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-list">
                    <li class="item"><a asp-controller="Home" asp-action="Index">خانه</a></li>
                    <li class="separator"><i class="feather-chevron-left"></i></li>
                    <li class="item current">جزئیات محصول</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="product-details-area rn-section-gapTop">
    <div class="container">
        <div class="row g-5">
            <!-- product image area -->


            <div class="col-lg-7 col-md-12 col-sm-12">
                <div class="product-tab-wrapper rbt-sticky-top-adjust">
                    <div class="pd-tab-inner">



                        <div class="nav rn-pd-nav rn-pd-rt-content nav-pills" id="v-pills-tab" role="tablist"
                            aria-orientation="vertical">
                            @{
                                var index = 0;
                                foreach (var item in Model.ProductDetail.Gallery)
                                {
                                    index++;
                                    if (index == 1)
                                    {
                                        <button class="nav-link active" id="v-pills-@index-tab" data-bs-toggle="pill"
                                            data-bs-target="#v-pills-@index" type="button" role="tab" aria-controls="v-pills-@index"
                                            aria-selected="true">
                                            <span class="rn-pd-sm-thumbnail">
                                                <img src="~/images/ProductImages/@item.ImageName" alt="Nft_Profile">
                                            </span>
                                        </button>
                                    }
                                    else
                                    {

                                        <button class="nav-link" id="v-pills-@index-tab" data-bs-toggle="pill"
                                            data-bs-target="#v-pills-@index" type="button" role="tab" aria-controls="v-pills-@index"
                                            aria-selected="true">
                                            <span class="rn-pd-sm-thumbnail">
                                                <img src="~/images/ProductImages/@item.ImageName" alt="Nft_Profile">
                                            </span>
                                        </button>
                                    }
                                }
                            }
                        </div>
                        <div class="tab-content rn-pd-content" id="v-pills-tabContent">
                            @{
                                var index2 = 0;

                                foreach (var item in Model.ProductDetail.Gallery)
                                {
                                    index2++;

                                    if (index2 == 1)
                                    {
                                        <div class="tab-pane fade show active" id="v-pills-@index2" role="tabpanel"
                                            aria-labelledby="v-pills-@index2-tab">
                                            <div class="rn-pd-thumbnail">
                                                <img img src="~/images/ProductImages/@item.ImageName" alt="Nft_Profile">
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="tab-pane fade" id="v-pills-@index2" role="tabpanel"
                                            aria-labelledby="v-pills-@index2-tab">
                                            <div class="rn-pd-thumbnail">
                                                <img img src="~/images/ProductImages/@item.ImageName" alt="Nft_Profile">
                                            </div>
                                        </div>
                                    }
                                }
                            }

                        </div>

                    </div>
                </div>
            </div>
            <!-- product image area end -->

            <div class="col-lg-5 col-md-12 col-sm-12 mt_md--50 mt_sm--60">
                <div class="rn-pd-content-area">
                    <div class="pd-title-area">
                        <h4 class="title">@Model.ProductDetail.Name</h4>
                        <div class="pd-react-area">
                            <div class="heart-count">
                                <i data-feather="heart"></i>
                                <span>33</span>
                            </div>
                            <div class="count">
                                <div class="share-btn share-btn-activation dropdown">
                                    <button class="icon" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <svg viewBox="0 0 14 4" fill="none" width="16" height="16"
                                            class="sc-bdnxRM sc-hKFxyN hOiKLt">
                                            <path fill-rule="evenodd" clip-rule="evenodd"
                                                d="M3.5 2C3.5 2.82843 2.82843 3.5 2 3.5C1.17157 3.5 0.5 2.82843 0.5 2C0.5 1.17157 1.17157 0.5 2 0.5C2.82843 0.5 3.5 1.17157 3.5 2ZM8.5 2C8.5 2.82843 7.82843 3.5 7 3.5C6.17157 3.5 5.5 2.82843 5.5 2C5.5 1.17157 6.17157 0.5 7 0.5C7.82843 0.5 8.5 1.17157 8.5 2ZM11.999 3.5C12.8274 3.5 13.499 2.82843 13.499 2C13.499 1.17157 12.8274 0.5 11.999 0.5C11.1706 0.5 10.499 1.17157 10.499 2C10.499 2.82843 11.1706 3.5 11.999 3.5Z"
                                                fill="currentColor"></path>
                                        </svg>
                                    </button>

                                    <div class="share-btn-setting dropdown-menu dropdown-menu-end">
                                        <button type="button" class="btn-setting-text share-text" data-bs-toggle="modal"
                                            data-bs-target="#shareModal">
                                            اشتراک گذاری
                                        </button>
                                        <button type="button" class="btn-setting-text report-text"
                                            data-bs-toggle="modal" data-bs-target="#reportModal">
                                            گزارش
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="rn-bid-details">
                        <div class="tab-wrapper-one">
                            <nav class="tab-button-one">
                                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                    <button class="nav-link active" id="nav-profile-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-profile" type="button" role="tab"
                                        aria-controls="nav-profile" aria-selected="false">مشخصات</button>
                                    <button class="nav-link" id="nav-home-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home"
                                        aria-selected="true"> معرفی</button>
                                    <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab"
                                        data-bs-target="#nav-contact" type="button" role="tab"
                                        aria-controls="nav-contact" aria-selected="false">ویژگی ها</button>
                                </div>
                            </nav>
                            <div class="tab-content rn-bid-content" id="nav-tabContent">
                                <div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">


                                    <div class="rn-pd-sm-property-wrapper">
                                        <h6 class="pd-property-title">
                                            معرفی محصول
                                        </h6>
                                        <div class="property-wrapper">
                                            <!-- single property -->
                                            <div class="pd-property-inner">
                                                <span
                                                    class="color-white value">@Model?.ProductDetail?.Description</span>
                                            </div>
                                            <!-- single property End -->
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane fade show active" id="nav-profile" role="tabpanel"
                                    aria-labelledby="nav-profile-tab">
                                    <!-- single -->
                                    <div class="rn-pd-bd-wrapper">

                                        <!-- single -->
                                        <div class="rn-pd-sm-property-wrapper">
                                            <h6 class="pd-property-title">
                                                وضعیت
                                            </h6>
                                            <div class="property-wrapper">
                                                <!-- single property -->
                                                <div class="pd-property-inner">
                                                    @if (Model?.ProductDetail?.IsFinished == true)
                                                    {
                                                        <span class="color-white value">ناموجود</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="color-white value">موجود</span>
                                                    }
                                                </div>
                                                <!-- single property End -->
                                            </div>
                                        </div>
                                        <div class="rn-pd-sm-property-wrapper">
                                            <h6 class="pd-property-title">
                                                اندازه
                                            </h6>
                                            <div class="property-wrapper">
                                                <!-- single property -->
                                                <div class="pd-property-inner">
                                                    <span class="color-white value">@Model?.ProductDetail?.Size
                                                        سانتیمتر</span>
                                                </div>
                                                <!-- single property End -->
                                            </div>
                                        </div>
                                        <!-- single -->
                                        <!-- single -->
                                        <div class="rn-pd-sm-property-wrapper">
                                            <h6 class="pd-property-title">
                                                وزن
                                            </h6>
                                            <div class="catagory-wrapper">
                                                <!-- single property -->
                                                <div class="pd-property-inner">
                                                    <span class="color-white value">@Model?.ProductDetail?.Weight
                                                        گرم</span>
                                                </div>
                                                <!-- single property End -->
                                                <!-- single property End -->
                                            </div>
                                        </div>
                                        <!-- single -->
                                    </div>
                                    <!-- single -->
                                </div>
                                <div class="tab-pane fade" id="nav-contact" role="tabpanel"
                                    aria-labelledby="nav-contact-tab">
                                    <div class="rn-pd-sm-property-wrapper">
                                        <h6 class="pd-property-title">
                                            جنس
                                        </h6>
                                        <div class="property-wrapper">
                                            <!-- single property -->
                                            <div class="pd-property-inner">
                                                <span
                                                    class="color-white value">@Model?.ProductDetail?.Material?.Name</span>
                                            </div>
                                            <!-- single property End -->
                                        </div>
                                    </div>
                                    <div class="rn-pd-sm-property-wrapper">
                                        <h6 class="pd-property-title">
                                            ویژگی های محصول
                                        </h6>
                                        <div class="property-wrapper">
                                            @{
                                                if (Model.ProductDetail.Features != null)
                                                {
                                                    string[] parts = @Model.ProductDetail.Features.Split('#').Skip(1).ToArray();
                                                    foreach (string part in parts)
                                                    {
                                                        <div class="pd-property-inner">
                                                            <span class="color-white value">@part</span>
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="place-bet-area">
                            <div class="rn-bet-create">
                                <div class="bid-list winning-bid">
                                    <h6 class="title"> روش های سفارش</h6>
                                </div>
                            </div>
                            <!-- <a class="btn btn-primary-alta mt--30" href="#">ثبت پیشنهاد</a> -->
                            <a href="https://api.whatsapp.com/send?phone=09032387023" target="_blank"
                                class="btn btn-whatsapp-alta mt--30">ثبت سفارش از طریث واتساپ<img
                                    style="height: 47px;width: 47px;" src="~/images/logo/whatsapp.png" /></a>
                            @if (@Model.ProductDetail.DigikalLink != null)
                            {
                                 <a href="@Model.ProductDetail.DigikalLink" target="_blank"
                                class="btn btn-digikala-alta mt--10">ثبت سفارس
                                از طریق دیجیکالا<img style="height: 47px;width: 47px;"
                                    src="~/images/logo/dig.png" /></a>
                            }
                            @if (@Model.ProductDetail.BasalamLink != null)
                            {
                           
                            <a href="@Model.ProductDetail.BasalamLink" target="_blank"
                                class="btn btn-basalam-alta mt--10">ثبت سفارش
                                از طریق با سلام<img style="height: 47px;width: 47px;" src="~/images/logo/r.png" /></a>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<!-- New items Start -->
<div class="rn-new-items rn-section-gapTop">
    <div class="container">
        <div class="row mb--30 align-items-center">
            <div class="col-12">
                <h3 class="title mb--0" data-sal-delay="150" data-sal="slide-up" data-sal-duration="800">موارد مرتبط
                </h3>
            </div>
        </div>
        <div class="row g-5">

            <!-- start single product -->
            @foreach (var item in Model?.SimilarProducts)
            {
                <div data-sal="slide-up" data-sal-delay="150" data-sal-duration="800"
                    class="col-5 col-lg-4 col-md-6 col-sm-6 col-12">
                    <div class="product-style-one no-overlay">
                        <div class="card-thumbnail">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                                <img src="~/Images/ProductImages/@item.Image" alt="img">
                            </a>
                        </div>
                        <div class="product-share-wrapper">
                            <div class="share-btn share-btn-activation dropdown">
                                <button class="icon" data-bs-toggle="dropdown" aria-expanded="false">
                                    <svg viewBox="0 0 14 4" fill="none" width="16" height="16"
                                        class="sc-bdnxRM sc-hKFxyN hOiKLt">
                                        <path fill-rule="evenodd" clip-rule="evenodd"
                                            d="M3.5 2C3.5 2.82843 2.82843 3.5 2 3.5C1.17157 3.5 0.5 2.82843 0.5 2C0.5 1.17157 1.17157 0.5 2 0.5C2.82843 0.5 3.5 1.17157 3.5 2ZM8.5 2C8.5 2.82843 7.82843 3.5 7 3.5C6.17157 3.5 5.5 2.82843 5.5 2C5.5 1.17157 6.17157 0.5 7 0.5C7.82843 0.5 8.5 1.17157 8.5 2ZM11.999 3.5C12.8274 3.5 13.499 2.82843 13.499 2C13.499 1.17157 12.8274 0.5 11.999 0.5C11.1706 0.5 10.499 1.17157 10.499 2C10.499 2.82843 11.1706 3.5 11.999 3.5Z"
                                            fill="currentColor"></path>
                                    </svg>
                                </button>

                                <div class="share-btn-setting dropdown-menu dropdown-menu-end">
                                    <button type="button" class="btn-setting-text share-text" data-bs-toggle="modal"
                                        data-bs-target="#shareModal">
                                        اشتراک گذاری
                                    </button>
                                    <button type="button" class="btn-setting-text report-text" data-bs-toggle="modal"
                                        data-bs-target="#reportModal">
                                        گزارش
                                    </button>
                                </div>

                            </div>
                        </div>
                        <a href="product-details.html"><span class="product-name">@item.Name</span></a>
                        <div class="bid-react-area">
                            <div class="last-bid">@item.Category.Name</div>
                            <div class="react-area">
                                <svg viewBox="0 0 17 16" fill="none" width="16" height="16"
                                    class="sc-bdnxRM sc-hKFxyN kBvkOu">
                                    <path
                                        d="M8.2112 14L12.1056 9.69231L14.1853 7.39185C15.2497 6.21455 15.3683 4.46116 14.4723 3.15121V3.15121C13.3207 1.46757 10.9637 1.15351 9.41139 2.47685L8.2112 3.5L6.95566 2.42966C5.40738 1.10976 3.06841 1.3603 1.83482 2.97819V2.97819C0.777858 4.36443 0.885104 6.31329 2.08779 7.57518L8.2112 14Z"
                                        stroke="currentColor" stroke-width="2"></path>
                                </svg>
                                <span class="number">322</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- end single product -->

        </div>
    </div>
</div>
<!-- New items End -->
