        const categoryDropdown = document.querySelector('#SelectedCategoryId');
        const subCategoryDropdown = document.querySelector('#SelectedSubCategoryId');

        // Add an event listener to the Category dropdown list
        categoryDropdown.addEventListener('change', () =>
        {
            // Get the selected Category value
            const categoryId = categoryDropdown.value;

            // Clear the Sub Category dropdown list
            subCategoryDropdown.innerHTML = '<option value="">-- Select --</option>';

            // Disable the Sub Category dropdown if Category is "-- Select --"
            subCategoryDropdown.disabled = categoryId === '';

            // If a Category is selected, make an AJAX request to fetch the Sub Categories
            if (categoryId !== '')
            {
                // Make an AJAX request to the server to get the Sub Categories based on the selected Category
                // Replace the placeholder URL with your actual endpoint
                fetch(`/Admin/Product/GetSubCategories?categoryId=${categoryId}`)
                    .then(response => response.json())
                    .then(data =>
                    {
                        // Iterate over the received Sub Categories and create options for the Sub Category dropdown
                        data.forEach(subCategory =>
                        {
                            const option = document.createElement('option');
                            option.value = subCategory.id;
                            option.textContent = subCategory.name;
                            subCategoryDropdown.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error:', error));
            }
        });
    </script>