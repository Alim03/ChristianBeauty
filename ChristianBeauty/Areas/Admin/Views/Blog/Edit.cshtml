@model ChristianBeauty.ViewModels.Blogs.EditBlogViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Edit Product</h1>
</div>



<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">ویرایش کردن بلاگ</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form asp-action="Edit" enctype="multipart/form-data" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-6 form-group">
                                            <input asp-for="Tittle" type="text" placeholder="تیتر بلاگ "
                                                   class="form-control" />

                                            <span asp-validation-for="Tittle" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-6 form-group">
                                            <input asp-for="ReadingTime" type="text" placeholder=" مدت زمان مطالعه "
                                                   class="form-control" />

                                            <span asp-validation-for="ReadingTime" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>




                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-6 form-group">
                                            <input asp-for="Description" placeholder="متن اصلی" class="form-control" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>


                                <div class="col-6">
                                    <img src="/Images/ProductImages/@Model.Image" width="50%" height="50%"
                                         alt="Gallery Image" class="img-thumbnail" onclick="changeImage(this)" />
                                    <input type="file" style="display:none;" name="ImageFile"
                                           onchange="updateImage(this)" />
                                </div>

                                </div>
                                <div class="row">
                                    <div class="col-12 form-group ">
                                        <button type="submit" class="btn btn-primary">ثبت</button>
                                    </div>
                                </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <script>
        function changeImage(element) {
            var fileInput = element.nextElementSibling;
            if (fileInput && fileInput.tagName === "INPUT" && fileInput.type === "file") {
                fileInput.click();
            }
        }

        function updateImage(input) {
            var file = input.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    var image = input.previousElementSibling;
                    if (image && image.tagName === "IMG") {
                        image.src = e.target.result;
                    }
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
