@model ChristianBeauty.ViewModels.Categories.EditCategoryViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Edit Category</h1>
</div>



<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">دسته بندی</h1>
                    <form asp-action="Edit" method="post">
                        <div class="form-group pb-2">
                            <input asp-for="Name" class="form-control" id="name" placeholder="دسته بندی" />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <input type="hidden" asp-for="ParentCategoryId" value="@Model.ParentCategoryId" />

                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>