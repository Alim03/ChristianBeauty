@model ChristianBeauty.ViewModels.Blogs.PaginatedBlogsViewModel
@{
    ViewData["Title"] = "  بلاگ ها";
}
<style>
    /* Pagination container */
    .pagination-container {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Pagination list */
    .pagination-list {
        list-style: none;
        display: flex;
        gap: 10px;
    }

    /* Pagination list item */
    .pagination-item {
        background-color: #242435;
        color: #ffffff;
        padding: 5px 10px;
        border-radius: 5px;
    }

        /* Current page item */
        .pagination-item.current {
            background-color: #00a3ff;
            font-weight: bold;
        }

    /* Pagination link */
    .pagination-link {
        color: #ffffff;
        text-decoration: none;
    }

        /* Pagination link hover */
        .pagination-link:hover {
            color: #00a3ff;
        }
</style>
<div class="rn-breadcrumb-inner ptb--30">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <h5 class="title text-center text-md-end">وبلاگ ما</h5>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-list">
                    <li class="item"><a href="index.html">خانه</a></li>
                    <li class="separator"><i class="feather-chevron-left"></i></li>
                    <li class="item current">وبلاگ ما</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="rn-blog-area rn-section-gapTop">
    <div class="container">
        <div class="row g-5">

            <!-- start single blog -->
            @{
                foreach (var item in Model.Blogs)
                {
                    
           
            <div class="col-lg-4 col-md-6 col-12" data-sal="slide-up" data-sal-delay="150" data-sal-duration="800">
                <div class="rn-blog" data-toggle="modal" data-target="#exampleModalCenters">
                    <div class="inner">
                        <div class="thumbnail">
                                    <a asp-controller="blog" asp-action="Detail" asp-route-id="@item.Id">

                              <img src="~/Images/ProductImages/@item.Image" alt="Personal Portfolio Images">
                            </a>
                        </div>
                        <div class="content">
                            <div class="category-info">
                                <div class="category-list">
                                    <a href="blog-details.html">کریستین بیوتی</a>
                                </div>
                                <div class="meta">
                                    <span><i class="feather-clock"></i> @item.ReadingTime دقیقه مطالعه</span>
                                </div>
                            </div>
                            <h4 class="title"><a href="blog-details.html">@item.Tittle <i class="feather-arrow-up-left"></i></a></h4>
                        </div>
                    </div>
                </div>
            </div>

                }
            }

            <div class="pagination-container">
                <ul class="pagination-list">

                    @if (Model.Metadata.HasPreviousPage)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link" href="?page=@(Model.Metadata.CurrentPage - 1)">قبلی</a>
                        </li>
                    }



                    @for (int i = Model.Metadata.CurrentPage - 5; i <= Model.Metadata.CurrentPage + 5; i++)
                    {
                        if (i >= 1 && i <= Model.Metadata.TotalPages)
                        {
                            <li class="pagination-item @(i == Model.Metadata.CurrentPage ? "current" : "")">
                                <a class="pagination-link" href="?page=@i">@i</a>
                            </li>
                        }
                    }

                    @if (Model.Metadata.HasNextPage)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link" href="?page=@(Model.Metadata.CurrentPage + 1)">بعدی</a>
                        </li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>

